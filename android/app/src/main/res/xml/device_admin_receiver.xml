<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <limit-password />
        <watch-login />
        <reset-password />
        <force-lock />
        <wipe-data />
        <expire-password />
        <encrypted-storage />
        <disable-camera />
        <disable-keyguard-features />
        <policy android:name="android.permission.DISALLOW_SAFE_BOOT" />
        <policy android:name="android.permission.DISALLOW_FACTORY_RESET" />
        <policy android:name="android.permission.DISALLOW_ADD_USER" />
        <policy android:name="android.permission.DISALLOW_MOUNT_PHYSICAL_MEDIA" />
        <policy android:name="android.permission.DISALLOW_ADJUST_VOLUME" />
        <policy android:name="android.app.device_admin"/>
    </uses-policies>
</device-admin>